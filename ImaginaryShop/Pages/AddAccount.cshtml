    <script>
        $(document).ready(function () {
           

            $('#password').on('input', function (e) {
                let password = $(this).val();
                console.log(password);
                $.ajax({
                    type: "POST",
                    beforeSend: function (xhr) {
                        xhr.setRequestHeader("XSRF-TOKEN",
                            $('input:hidden[name="__RequestVerificationToken"]').val());
                    },
                    url: '/api/PassOMeter/score/',
                    data: JSON.stringify({ password: password }),
                    contentType: "application/json",
                    success: function (response) {
                    //her stiller vi på pilen
                        console.log(response.score);

                        let angle = 180-((response.score * 180)/100);
                        $("#polygonGroup").animate({ dummy: 1 }, { // Dummy værdi, da jQuery ikke kan animere `transform`
                            step: function (now) {
                                $("#polygonGroup").attr("transform", `rotate(${angle} 247.47 248.04)`);
                            },
                            duration: 500
                        });
                    }
                });


              
            });
        });
