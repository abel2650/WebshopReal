@page
@model ImaginaryShop.Pages.OrderConfirmationModel
@{
    ViewData["Title"] = "Ordrebekræftelse";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
                    <h2 class="card-title mt-3">Tak for din ordre!</h2>
                    <p class="card-text">
                        Din ordre er blevet modtaget og vil blive behandlet hurtigst muligt.
                        Du vil modtage en bekræftelsesmail med ordredetaljer.
                    </p>
                    <div class="alert alert-info">
                        Din ordre vil blive behandlet og afsendt inden for 1-3 hverdage.
                    </div>
                    <hr>
                    <a href="/" class="btn btn-primary">Tilbage til forsiden</a>
                </div>
            </div>
        </div>
    </div>
</div> 