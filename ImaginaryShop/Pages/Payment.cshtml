@page
@model ImaginaryShop.Pages.PaymentModel
@{
    ViewData["Title"] = "Betaling";
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-8 mb-4">
            <div class="card p-4">
                <div class="card-header py-3">
                    <h4 class="mb-0">Betalingsoplysninger</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="mb-3">
                            <label asp-for="PaymentForm.CardName" class="form-label">Navn på kort</label>
                            <input asp-for="PaymentForm.CardName" class="form-control" />
                            <span asp-validation-for="PaymentForm.CardName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PaymentForm.CardNumber" class="form-label">Kortnummer</label>
                            <input asp-for="PaymentForm.CardNumber" class="form-control" placeholder="1234567890123456" />
                            <span asp-validation-for="PaymentForm.CardNumber" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="PaymentForm.ExpDate" class="form-label">Udløbsdato</label>
                                <input asp-for="PaymentForm.ExpDate" class="form-control" placeholder="MM/ÅÅ" />
                                <span asp-validation-for="PaymentForm.ExpDate" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="PaymentForm.CVV" class="form-label">CVV</label>
                                <input asp-for="PaymentForm.CVV" class="form-control" placeholder="123" />
                                <span asp-validation-for="PaymentForm.CVV" class="text-danger"></span>
                                <small class="text-muted">3 cifre på bagsiden af kortet</small>
                            </div>
                        </div>

                        <hr class="my-4">

                        <button type="submit" class="btn btn-primary btn-lg w-100">Betal nu</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header py-3">
                    <h4 class="mb-0">Ordreoversigt</h4>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between">
                            <span>Subtotal</span>
                            <span id="subtotal">@Model.Basket.GetTotal() @Model.Basket.Products.FirstOrDefault()?.Product.Currency</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between">
                            <span>Levering</span>
                            <span class="text-success">Gratis</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between">
                            <span>Total</span>
                            <strong id="total">@Model.Basket.GetTotal() @Model.Basket.Products.FirstOrDefault()?.Product.Currency</strong>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 